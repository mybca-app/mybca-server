@model MyBCA.Server.Models.NewTab.NewTabBusTemplate

<article>
    <header>Bus location for @Model.Position.Town</header>
    @if (Model.Position.Location == "")
    {
        @:Your bus has not arrived yet.
    }
    else
    {
        @:Your bus is located in <mark>@Model.Position.Location</mark>
    }
    <footer>
        @if (Model.Expiry is not null)
        {
            @:We'll fetch new bus data at @Model.Expiry
        }
    </footer>
</article>